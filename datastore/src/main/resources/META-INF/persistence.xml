<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

  <persistence-unit name="PU">
    <class>org.egreen.seed.usermanagment.model.Person</class>

    <exclude-unlisted-classes />
    <properties>
      <property name="javax.jdo.option.ConnectionURL" value="jdbc:mysql://localhost/mytestseed"/>
      <property name="javax.jdo.option.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
      <property name="javax.jdo.option.ConnectionUserName" value="root"/>
      <property name="javax.jdo.option.ConnectionPassword" value="dew"/>

      <property name="datanucleus.autoCreateSchema" value="true"/>
      <property name="datanucleus.autoCreateColumns" value="true"/>
    </properties>
  </persistence-unit>

</persistence>