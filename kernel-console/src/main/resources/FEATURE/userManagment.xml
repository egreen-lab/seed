<root>

    <features>

        <!--Define Get User Feature-->
        <feature class="org.egreen.seed.sample.UserManagmentFeature" name="getUser">
            <params>
                <param name="username" class="java.lang.String"></param>
            </params>
            <result class="org.egreen.seed.sample.model.User"></result>
        </feature>


        <!-- Save user in DB-->
        <feature class="org.egreen.seed.sample.UserManagmentFeature" name="saveUser">
            <params>
                <param name="user" class="org.egreen.seed.sample.model.User"></param>
            </params>
            <result class="java.lang.Long"></result>
        </feature>

        <!-- Get all users from DB-->
        <feature class="org.egreen.seed.sample.UserManagmentFeature" name="getAll">
            <params>
                <param name="user" class="org.egreen.seed.sample.model.User"></param>
            </params>
            <result class="java.util.List" type="org.egreen.seed.sample.model.User"></result>
        </feature>
    </features>

</root>